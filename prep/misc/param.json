{
    "environment": {
        "use_google_drive": false,
        "description": "Environment selection: true for Google Drive (Colab), false for local"
    },
    "paths": {
        "google_drive": {
            "base_path": "/content/drive/MyDrive",
            "prep_datasheets_folder": "/content/drive/MyDrive/prep/datasheets",
            "prep_json_folder": "/content/drive/MyDrive/prep/prep_json",
            "prep_vectorstore_folder": "/content/drive/MyDrive/prep/vectorstore",
            "main_prep_json_folder": "/content/drive/MyDrive/prep_json",
            "main_vectorstore_folder": "/content/drive/MyDrive/vectorstore"
        },
        "local": {
            "base_path": ".",
            "prep_datasheets_folder": "./prep/datasheets",
            "prep_json_folder": "./prep/prep_json", 
            "prep_vectorstore_folder": "./prep/vectorstore",
            "main_prep_json_folder": "./prep_json",
            "main_vectorstore_folder": "./vectorstore"
        }
    },
    "pdf_processing": {
        "pages_per_chunk": 3,
        "chunk_overlap": 1,
        "output_formats": {
            "save_filtered_pdf": true,
            "save_summary_only": false,
            "save_combined": true
        },
        "folders": {
            "pdf_folder": "./prep/datasheets",
            "pre_json_folder": "./prep/prep_json/pre_json",
            "result_json_folder": "./prep/prep_json"
        }
    },
    "vectorstore": {
        "chunk_size": 1000,
        "chunk_overlap": 200,
        "model_name": "sentence-transformers/all-MiniLM-L6-v2",
        "folders": {
            "vectorstore_folder": "./prep/vectorstore"
        }
    },
    "models": {
        "embedding_model": "sentence-transformers/all-MiniLM-L6-v2",
        "supported_llm": {
            "openai": ["gpt-4o-mini", "gpt-4o", "gpt-3.5-turbo"],
            "claude": ["claude-3-sonnet-20240229", "claude-3-haiku-20240307", "claude-3-opus-20240229"]
        }
    }
} 